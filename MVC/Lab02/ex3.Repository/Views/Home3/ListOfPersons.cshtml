@model WebMVCR1.Models.PersonRepository

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListOfPersons</title>
</head>
<body>
    <div>
        <h3>Список участников</h3>
        <p>Всего персон: @ViewBag.Count</p>
        <ul>
            @foreach (var p in ViewBag.People)
            {
                <li>@p.ToString()</li>
            }
        </ul>
        <p>@Html.ActionLink("На главную", "Index")</p>
    </div>
</body>
</html>
