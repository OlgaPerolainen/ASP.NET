
@{
    ViewBag.Title = "CreateBid";
}

<h2>CreateBid</h2>
<h3>Существующие заявки</h3>
<table class = "table">
    <tr>
        <td><p>Имя</p></td>
        <td><p>Тип кредита</p></td>
    </tr>
    @foreach (var client in ViewBag.Bids)
            {
                <tr>
                    <td><p>@client.ClientName</p></td>
                    <td><p>@client.CreditHead</p></td>
                </tr>
            }
</table>
<h3>Форма подачи заявки по программам кредитования</h3>
<form method="post" action="">
    <table class = "table">
        <tr>
            <td><p>Введите имя </p></td>
            <td><input type="text" name="ClientName" /></td>
        </tr>
        <tr>
            <td><p>Выберите из списка тип кредита: </p></td>
            <td>
                <select name="CreditHead">
                    @foreach (var credit in ViewBag.Credits)
                    {
                        <option>@credit.Head</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Отправить"/></td>
        </tr>
    </table>
</form>
